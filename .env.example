###############################
# bbs-over-ssh example .env
###############################

# Postgres connection
DATABASE_URL=postgres://bbs:bbs@localhost:5432/bbs

# Default room when a user connects
BBS_DEFAULT_ROOM=lobby

# Message limits and rate limiting
BBS_MSG_MAX_LEN=1000
BBS_RATE_PER_MIN=10

# Retention and history
BBS_RETENTION_DAYS=30
BBS_HISTORY_LOAD=200

# SSH gateway settings (when running the Go gateway directly)
# Path to the compiled TUI binary inside the container or host
BBS_CLIENT_PATH=./target/debug/bbs-tui
# Path to persistent host key (created if missing)
BBS_HOSTKEY_PATH=./host-keys/hostkey.pem

# Optional: Cloudflare Tunnel token (used by docker-compose.prod.yml)
TUNNEL_TOKEN=

# These are usually injected by the SSH gateway; you typically
# do not need to set them manually for local development of the TUI.
# BBS_PUBKEY_SHA256=
# BBS_PUBKEY_TYPE=
# REMOTE_ADDR=

# Optional: Admin (OpenSSH SHA256 fingerprint, e.g., SHA256:xxxxx)
BBS_ADMIN_FP=
